{
    "compilerOptions": {
        "target": "es6", // Spécifie le niveau de compatibilité ECMAScript pour le code généré
        "module": "es2020", // Spécifie le module code generation method
        "strict": true, // Active toutes les options strictes
        "esModuleInterop": true, // Permet les imports par défaut des modules avec des exports nommés
        "skipLibCheck": true, // Ignore les vérifications de type pour les fichiers de déclaration (.d.ts) des bibliothèques
        "forceConsistentCasingInFileNames": true, // Empêche les utilisateurs d'avoir des problèmes dans les systèmes de fichiers non sensibles à la casse
        "moduleResolution": "node", // Stratégie de résolution de module
        "resolveJsonModule": true, // Permet l'importation de fichiers .json
        "outDir": "./dist", // Répertoire de sortie pour les fichiers compilés
        "sourceMap": true, // Génère des cartes de sources correspondantes pour les fichiers .js
        "declaration": true, // Génère des fichiers .d.ts correspondants pour les fichiers .ts
        "lib": [
            "es6",
            "dom"
        ], // Bibliothèques par défaut à inclure dans la compilation
        "allowSyntheticDefaultImports": true, // Permet les imports par défaut pour les modules sans export par défaut
        "removeComments": false
    },
    "include": [
        "src/**/*"
    ], // Les fichiers à inclure dans la compilation
    "exclude": [
        "node_modules",
        "dist"
    ] // Les dossiers à exclure de la compilation
}